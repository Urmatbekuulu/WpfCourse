<UserControl x:Class="LearnXAML.NewUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LearnXAML"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             
             >
                
    <Grid>
        <TextBlock Text="Text" Name="textBlock"/>
        <!-- IsOpen="{Binding ElementName=textBlock,Path=IsMouseOver,Mode=OneWay}" -->
        <Popup
                PopupAnimation = "Slide"
                ClipToBounds="False"
                AllowsTransparency="True"
                Placement="Bottom"
                >
                <StackPanel>
                    <Border>
                        <TextBlock Text="this is first text blok"/>
                    </Border>
                    <Border>
                        <TextBlock Text="this is second text blok"/>
                    </Border>
                </StackPanel>
            </Popup>
        
    </Grid>
</UserControl>
