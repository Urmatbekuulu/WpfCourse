<UserControl x:Class="LearnXAML.GridBoxUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LearnXAML"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="customControl"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding ElementName=customControl,Path=Caption}" />
        <StackPanel Grid.Row="1">
            <TextBlock Grid.Row="1" Text="{Binding ElementName=customControl,Path=Content}" />
        </StackPanel>
    </Grid>
</UserControl>
