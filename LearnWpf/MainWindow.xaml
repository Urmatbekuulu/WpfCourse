<Window x:Class="LearnXAML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearnXAML"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ContentControl>
            <ContentControl.ContentTemplate>
                <DataTemplate>
                    <StackPanel>
                        <DockPanel Height="Auto">
                            <TextBlock Text="{TemplateBinding Content}" DockPanel.Dock="Left"/>
                            <Button Content="Close" DockPanel.Dock="Right"/>
                            <Button Content="Maximize" DockPanel.Dock="Right"/>
                            <Button Content="Minimize" HorizontalAlignment="Right" DockPanel.Dock="Right"/>
                        </DockPanel>
                    </StackPanel>
                </DataTemplate>
            </ContentControl.ContentTemplate>
            <ContentControl.Content>
                <Binding Path="Title" RelativeSource="{RelativeSource AncestorType=Window}"/>
            </ContentControl.Content>
        </ContentControl>
    </Grid>
</Window>
