<Window x:Class="LearnXAML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearnXAML"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="ListBoxItem">
        </Style>
        <local:DebugConverter x:Key="DebugConverter"/>
        <local:AgeToColorConverter x:Key="AgeToColorConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListBox ItemsSource="{Binding Path=People}" Name="listBox">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Focusable="True">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Age,Converter={StaticResource AgeToColorConverter}}" Value="True">
                                        <Setter Property="Background" Value="Green"/>
                                    </DataTrigger>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                    </Trigger>
                                    <MultiTrigger>
                                        <MultiTrigger.Conditions>
                                            <Condition Property="Background" Value="Green"/>
                                            <Condition Property="IsMouseOver" Value="True"/>
                                        </MultiTrigger.Conditions>
                                        <Setter Property="Height" Value="100"/>
                                    </MultiTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <Label Content="{Binding Path=FirstName }"/>
                        <Label Content="{Binding Path=LastName}"/>
                        <Label Content="{Binding Path=Age}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <UniformGrid Grid.Row="1" Rows="1">
            <TextBox Text="{Binding ElementName = listBox, Path =SelectedItem.FirstName, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Text="{Binding ElementName = listBox, Path =SelectedItem.LastName, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Text="{Binding ElementName = listBox, Path =SelectedItem.Age, UpdateSourceTrigger=PropertyChanged}"/>
        </UniformGrid>
    </Grid> 
</Window>
