<Window x:Class="LearnXAML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearnXAML"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Name="mainWindow"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Button Click="ExaminVisalTreeClicked" Content="Examine Visual Tree"/>
            <Button Click="ExamineLogicalTreeClicked" Content="Examine Logical Tree"/>
            <Button Click="HideShowPopup" Content="Show/Hide"/>
            <local:NewUserControl/>
        </StackPanel>
        <ListBox Name="listBox" Grid.Row="1"/>
    </Grid>
</Window>
