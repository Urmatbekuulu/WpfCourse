<Window 
        x:Class="LearnXAML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearnXAML"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Resources>
            <ControlTemplate TargetType="Button" x:Key="buttonTemplate">
                <Grid>
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup Name="CommonState">
                            <VisualState Name="Normal">
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="backgroundElement" 
                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" 
                                                    To="White" 
                                                    Duration="0:0:0.3"/>
                                </Storyboard>
                            </VisualState>
                            <VisualState Name="MouseOver">
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="backgroundElement" 
                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" 
                                                    To="Green" 
                                                    Duration="0:0:0.3"/>
                                </Storyboard>
                            </VisualState>
                            <VisualState Name="Pressed">
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="backgroundElement" 
                                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" 
                                                    To="Navy" 
                                                    Duration="0:0:0.3"/>
                                    <ColorAnimation Storyboard.TargetName="textBlock"
                                                    Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                    To="White"
                                                    Duration="0:0:0.3"/>
                                </Storyboard>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                    <Border Background="{TemplateBinding Background}" Name = "backgroundElement">
                        <TextBlock Name="textBlock" Text="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}" FontSize="15" />
                    </Border>
                </Grid>
            </ControlTemplate>
            <Style TargetType="Button">
                <Setter Property="Template" Value="{StaticResource buttonTemplate}"/>
            </Style>
        </Grid.Resources>
        <StackPanel>
            <Button Content="Button1"/>
            <Button Content="Button2"/>
        </StackPanel>

    </Grid>
</Window>
